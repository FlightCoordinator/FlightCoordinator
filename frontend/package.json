{
  "name": "flight-coordinator",
  "private": true,
  "version": "0.0.0",
  "description": "Automated flight manager app",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write",
    "preview": "vite preview"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
      "prettier --write"
    ],
    "tests/**/*.{ts,tsx,js,jsx}": [
      "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlightCoordinator/FlightCoordinator.git"
  },
  "author": "FlightCoordinator Authors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FlightCoordinator/FlightCoordinator/issues"
  },
  "homepage": "https://github.com/FlightCoordinator/FlightCoordinator#README",
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@tanstack/eslint-plugin-query": "^5.62.1",
    "@tanstack/react-query": "^5.62.7",
    "@types/eslint-plugin-react-refresh": "^0.4.0",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "i18next": "^24.1.0",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.54.1",
    "react-i18next": "^15.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.62.7",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/lodash": "^4.17.13",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.4.2",
    "lint-staged": "^15.2.11",
    "prettier": "3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
